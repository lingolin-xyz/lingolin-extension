{
  "manifest_version": 3,
  "name": "lingolin",
  "version": "0.01",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "selectionBanner.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["translate-icon.svg", "copy-icon.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
