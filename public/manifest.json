{
  "manifest_version": 3,
  "name": "lingolin",
  "version": "1.3407",
  "action": {
    "default_popup": "index.html",
    "default_width": 360,
    "default_height": 440,
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "selectionBanner.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": [
        "translate-icon.svg",
        "copy-icon.svg",
        "spinner-icon.svg",
        "openai-icon.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
