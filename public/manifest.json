{
  "manifest_version": 3,
  "name": "lingolin",
  "version": "0.01",
  "action": {
    "default_popup": "index.html",
    "default_width": 360,
    "default_height": 440
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "selectionBanner.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["translate-icon.svg", "copy-icon.svg", "spinner-icon.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
